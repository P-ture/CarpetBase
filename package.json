{
  "name": "carpetbase",
  "version": "0.1.0",
  "description": "",
  "main": "public/index.html",
  "scripts": {
    "test": "npm run spec && npm run lint",
    "build": "taskfile build",
    "watch": "taskfile watch",
    "spec": "ava",
    "lint": "xo src/js/**/*.js src/server/**/*.js && stylelint src/sass/*.scss src/sass/**/*.scss",
    "images": "mkdir -p public/assets/images && ncp src/images public/assets/images",
    "sass": "taskfile sass",
    "html": "ncp src/index.html public/index.html",
    "migrate": "db-migrate up -e mysql",
    "teardown": "db-migrate reset -e mysql",
    "start": "node public/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pture/CarpetBase.git"
  },
  "author": "Adam Timberlake <adam.timberlake@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Pture/CarpetBase/issues"
  },
  "homepage": "https://github.com/Pture/CarpetBase#readme",
  "dependencies": {
    "argon2": "~0.16.2",
    "axios": "~0.16.2",
    "base-64": "~0.1.0",
    "body-parser": "~1.17.2",
    "compression": "~1.6.2",
    "cookie-parser": "~1.4.3",
    "csprng": "~0.1.2",
    "db-migrate": "~0.10.0-beta.24",
    "db-migrate-mysql": "~1.1.10",
    "express": "~4.15.3",
    "gender-detection": "0.0.5",
    "google-map-react": "~0.25.0",
    "handlebars": "~4.0.11",
    "jsonwebtoken": "~8.1.0",
    "knex": "~0.14.0",
    "mailgun-js": "~0.13.1",
    "mariasql": "~0.2.6",
    "object-hash": "~1.1.8",
    "pg-connection-string": "~2.0.0",
    "prop-types": "~15.6.0",
    "ramda": "~0.25.0",
    "react": "~16.0.0",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.0.0",
    "react-markdown": "~2.5.0",
    "react-redux": "~5.0.6",
    "react-router-dom": "~4.2.2",
    "redux": "~3.7.2",
    "redux-thunk": "~2.2.0",
    "set-cookie": "0.0.4",
    "sort-by": "~1.2.0"
  },
  "devDependencies": {
    "ava": "~0.23.0",
    "axios-mock-adapter": "~1.9.0",
    "babel-cli": "~6.24.1",
    "babel-eslint": "~7.2.3",
    "babel-loader": "~7.0.0",
    "babel-polyfill": "~6.23.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-2": "~6.24.1",
    "babel-register": "~6.26.0",
    "browser-env": "~3.2.1",
    "concurrently": "~3.5.0",
    "enzyme": "~3.1.1",
    "enzyme-adapter-react-16": "~1.1.0",
    "eslint-config-xo-react": "~0.12.0",
    "eslint-plugin-react": "~7.1.0",
    "ncp": "~2.0.0",
    "node-sass": "~4.5.3",
    "nodemon": "~1.12.1",
    "rimraf": "^2.6.2",
    "stylelint-config-standard": "~16.0.0",
    "stylelint-scss": "~1.4.4",
    "taskfile": "~0.5.11",
    "uglifyjs-webpack-plugin": "~0.4.6",
    "webpack": "~3.8.1",
    "xo": "~0.18.2"
  },
  "ava": {
    "concurrency": 3,
    "failFast": true,
    "files": [
      "./tests/*.test.js",
      "./tests/**/*.test.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-polyfill",
      "babel-register",
      "./tests/helpers/browser-env.js",
      "./tests/helpers/enzyme.js",
      "./tests/helpers/mocks.js"
    ]
  },
  "xo": {
    "space": 4,
    "esnext": true,
    "parser": "babel-eslint",
    "globals": [
      "window",
      "document"
    ],
    "extends": "xo-react",
    "rules": {
      "default-case": "off",
      "padded-blocks": "off",
      "no-unused-expressions": "off",
      "object-curly-spacing": [
        2,
        "always"
      ],
      "import/prefer-default-export": "off",
      "react/jsx-tag-spacing": "off",
      "react/jsx-no-bind": "off",
      "import/no-named-as-default": "off"
    }
  }
}
